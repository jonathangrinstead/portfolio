</div>

  <div class="row justify-content-center pt-4">

    <%# Music Tab  %>
    <div class="col-3">
      <div class="card" style="height:20rem;">
        <div data-controller="music"
        data-music-client-value= "<%= ENV['CLIENT_ID'] %>"
        data-music-client-secret-value= "<%= ENV['CLIENT_SECRET'] %>"
        >
        </div>
          Music API
        </div>
    </div>

    <%# Weather Tab  %>
    <div class="col-3">
      <div class="card justify-content-center text-center" style="height:20rem; background-color:#add8e6;" data-controller="weather"  data-weather-api-key-value="<%= ENV['WEATHER_API_KEY'] %>">
          <div data-weather-target="img"></div>
          <h1 data-weather-target="temp"></h1>
          <div class="d-inline-flex justify-content-center text-center">
            <h6 data-weather-target="max" class="mx-2"></h6>
            <h6 data-weather-target="min" class="mx-2"></h6>
          </div>
        <div class="card-body">
          <h4 data-weather-target="location"></h4>
          <h5 data-weather-target="description"></h5>
        </div>
      </div>
    </div>

    <%# Quotes Tab %>
    <div class="col-6" >
      <div class="card align-items-center" style="height:20rem;" data-controller="quotes">
      <div class="card d-flex justify-content-center mt-4" style="height: 13rem; width:34rem;">
        <div class="card-body mt-2 mx-4 mb-3 overflow-auto" style="height:15rem">
        <div class="row">
          <h4 data-quotes-target="content">‚ùù Computer Science is no more about computers than astronomy is about telescopes. ‚ùû</h4>
        </div>
        <div class="row">
          <h5 class="d-flex justify-content-end" data-quotes-target="author"> -Edsger W. Dijkstra</h5>
        </div>
        </div>
      </div>
        <div class="d-flex justify-content-end mt-3">
          <button class="btn btn-secondary quote-button p-2 mb-4" data-action="click->quotes#refresh">Refresh Quote</button>
        </div>
      </div>
    </div>

  </div>

  <%# Projects Area %>

  <div class="row d-flex justify-content-center mt-4 mb-4 p-1">
    <div class="col-12 d-flex justify-content-start">
      <h1 class="header">Projects üöÄ</h1>
