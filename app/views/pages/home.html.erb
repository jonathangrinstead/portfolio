<div class="container">
<%# Header  %>
<div class="row d-flex justify-content-center mt-3">
  <div class="col-12">
      <div class="d-flex justify-content-between p-3">
        <div class="header">
        <h1>Jonathan Grinstead üëã</h1>
        <h6>Full-Stack Developer</h6>
        </div>
        <div class="mt-2 d-flex justify-content-between">
        <h4 class="mx-3"><a href="#projects" data-action="click->smooth-scroll#scrollToTarget">Projects</a></h4>
        <h4 ><%= mail_to "jonathangrinstead.design@gmail.com", "Contact" %></h4>
